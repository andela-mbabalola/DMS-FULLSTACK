md-content.main-content(flex)
  i.fa.fa-bars(hide-gt-xs ng-click="toggle()")
  .edit-document-box(ng-controller="userDocumentCtrl" flex)
    md-toolbar.doc-modal-header
      .md-toolbar-tools
        span Edit Document
        span(flex='')
        span(class='fa fa-times' ui-sref='userProfile.documents' aria-label='Close dialog' style='cursor: pointer;')
      md-content(layout-padding)
        div.edit-content
          form(method="post" name="editDocumentForm" ng-submit="editDocument()")
            md-input-container.md-block(flex-gt-sm)
              label.edit-label Title
              input.title(ng-model="docs.title" name="title" type="text" required="true") 
            md-input-container.md-block(flex-gt-sm)
              textarea(ui-tinymce="tinymceOptions" ng-model="docs.content")  
            button.updateDoc(type="submit" ng-disabled="editDocumentForm.$invalid") Update
